<p id="notice"><%= notice %></p>

<h1>Listing Admin Authors</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.account %></td>
        <td><%= link_to 'Show', admin_author_path(author) %></td>
        <td><%= link_to 'Edit', edit_admin_author_path(author) %></td>
        <td><%= link_to 'Destroy', admin_author_path(author), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_admin_author_path %>
