<%= form_tag ('/admin/sign_in'), :class => "form-horizontal" do %>
  <fieldset>
    <legend>Sign in</legend>

    <div class="form-group">
      <%= label_tag 'sign_in[name]', 'Name', :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= text_field_tag 'sign_in[name]', '', :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'sign_in[password]', 'Password', :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= password_field_tag 'sign_in[password]', '', :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= submit_tag 'submit', :class => "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
