<div class="game-box">
  <div class="game-box" style="float: left;"><%= image_tag(@game.image_url) if @game.image.present? %></div>
  <h2 style="float: right;"><%= @game.name %></h1>
  <p><%= @game.description %></p>
</div>

<%= form_for collect_game_path(@game), :class => "form-horizontal" do |f| %>
  <fieldset>
  <legend>アンケート</legend>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this admin_game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-lg-2 control-label">評価</label>
    <div class="col-lg-10">
        <select name="collect[evaluation]" class="form-control" id="select">
          <option value='1'>とても面白い</option>
          <option value='2'>面白い</option>
          <option value='3'>普通</option>
          <option value='4'>あまり面白くない</option>
          <option value='5'>面白くない</option>
        </select>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'collect[impression]', '感想', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= text_area 'collect[impression]', '', :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'collect[guest_name]', '名前(ハンドルネームみたいなもの)', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= text_field_tag 'collect[guest_name]', '', :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit '送信', :class => "btn btn-primary" %>
    </div>
  </div>
  </fieldset>
<% end %>

<script>
$(function(){
  $(".image-box img").each(function(){
    $(this).bind("load", function(){
      if($(this).width() > $(this).height()){
        $(this).css("height", "600px");
        $(this).css("left", -($(this).width()-600)/2 + "px");
      }else{
        $(this).css("width", "600px");
        $(this).css("top", -($(this).height()-600)/2 + "px");
      }
    });
  });
});
</script>
